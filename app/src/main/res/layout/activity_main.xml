<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/poppins"
        android:text="Sudoku Solver"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/board"
        app:layout_constraintEnd_toEndOf="@id/board"
        app:layout_constraintStart_toStartOf="@id/board" />

    <com.masdika.sudokusolver.SudokuBoardViews
        android:id="@+id/board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_board"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_board" />

    <RelativeLayout
        android:id="@+id/btn_fill_1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/btn_fill_2"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/board">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_2"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/btn_fill_3"
        app:layout_constraintStart_toEndOf="@+id/btn_fill_1"
        app:layout_constraintTop_toBottomOf="@id/board">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_3"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/btn_fill_4"
        app:layout_constraintStart_toEndOf="@+id/btn_fill_2"
        app:layout_constraintTop_toBottomOf="@id/board">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_4"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/btn_fill_5"
        app:layout_constraintStart_toEndOf="@+id/btn_fill_3"
        app:layout_constraintTop_toBottomOf="@id/board">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_5"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@+id/btn_fill_4"
        app:layout_constraintTop_toBottomOf="@id/board">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn_fill_6"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/btn_fill_1"
        app:layout_constraintStart_toStartOf="@id/btn_fill_1"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_7"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/btn_fill_2"
        app:layout_constraintStart_toStartOf="@+id/btn_fill_2"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_8"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/btn_fill_3"
        app:layout_constraintStart_toStartOf="@id/btn_fill_3"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fill_9"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/btn_fill_4"
        app:layout_constraintStart_toStartOf="@id/btn_fill_4"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_delete"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/btn_fill_5"
        app:layout_constraintStart_toStartOf="@id/btn_fill_5"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_5"
        tools:ignore="SpeakableTextPresentCheck">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/delete"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_solve2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_button"
        android:text="Solve"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btn_reset2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reset2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/custom_button"
        android:text="Reset"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@+id/btn_solve2"
        app:layout_constraintTop_toBottomOf="@id/btn_fill_6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>